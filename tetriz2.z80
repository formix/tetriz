 MACRO RANDOMIZE
    LD      HL,(RANDOM_SEED)
    INC     HL
    LD      (RANDOM_SEED),HL
 ENDM

 MACRO   CPRINT &chr
    EX      AF,AF'
    LD      A,&chr
    CALL    OUTA
    EX      AF,AF'
 ENDM


